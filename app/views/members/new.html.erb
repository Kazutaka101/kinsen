<title>琴線 - 会員登録</title>
<h1>会員登録</h1>
<%= form_for @member do |f| %>
    <table class="attr">
        <tr>
            <th><%= f.label :name %></th>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <th><%= f.label :gender %></th>
            <td>
            <%= f.radio_button :gender, 0 %>
            <%= f.label :gender_0, "Male" %>
            <%= f.radio_button :gender, 1 %>
            <%= f.label :gender_1, "Female" %>
            <%= f.radio_button :gender, 2 %>
            <%= f.label :gender_2, "Other" %>
            </td>
        </tr>
        <tr>
            <th><%= f.label :telephone %></th>
            <td><%= f.text_field :telephone %></th>
        </tr>
        <tr>
            <th><%= f.label :email %></th>
            <td><%= f.text_field :email %></td>
        </tr>
        <tr>
            <th><%= f.label :address %></th>
            <td><%= f.text_field :address %></th>
        </tr>
        <tr>
            <th><%= f.label :birthday %></th>
            <td><%= f.date_select :birthday, start_year: 1900, end_year: Time.now.year, use_month_numbers: true %></td>
        </tr>
    </table>
    <div>
    <%= f.submit "Sign up" %>
    </div>
<% end %>