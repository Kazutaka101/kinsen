<% @page_title = "Login Required" %>
<% if flash.alert %> 
<p class = "alert"><%= flash.alert %></p><% end %>
<%= form_tag :session, id: "login_form" do %>
    <div>
        <label>Email:</label>
        <input type = "email" name = "email" >
    </div>
    <div>
        <label>Password:</label>
        <input type = "password" name = "password" >
    </div>
    <div>
        <input type = "submit" value = "login">
    </div>
<% end %>